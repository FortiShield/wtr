#!/usr/bin/env bash
# git-wtr - Git wtr runner (git subcommand wrapper)
# Allows running as: git wtr <command>

# Find this script's real location (resolve symlinks)
SRC="${BASH_SOURCE[0]}"
while [ -h "$SRC" ]; do
  DIR="$(cd -P "$(dirname "$SRC")" && pwd)"
  SRC="$(readlink "$SRC")"
  [[ $SRC != /* ]] && SRC="$DIR/$SRC"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SRC")" && pwd)"

# Execute the main wtr script
exec "$SCRIPT_DIR/wtr" "$@"